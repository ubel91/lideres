{% extends 'super/index.html.twig' %}

{% block title %}
    Registro Catálogos
{% endblock %}

{% block body %}
    {{parent()}}
{% endblock %}
{% block right_block %}
    <div class="col-lg-9 pt-5">
        <div class="row">
            <div class="col-lg-3 offset-lg-3 justify-content-start">
                {% block title_panel %}
                    <h4 style="color: #aacd4e" > Registro Catálogos</h4>
                {% endblock %}
            </div>
            <div class="col-lg-4 offset-lg-2">
                {% block searcher %}
                {% endblock %}
            </div>
        </div>
        <div class="row mt-4 ml-15">
            <div class="col-lg-4 offset-lg-2">
                {{ form_start(form, {'attr': {'id': 'catalogo_form'}}) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form.nombre) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form.etapas) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form.materias) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form.grados) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 offset-lg-4">
                        {{ form_row(form.registrar) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}