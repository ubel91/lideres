{% extends 'super/index.html.twig' %}

{% block title %}
    Categorías
{% endblock %}

{% block title_panel %}
    <h4 style="color: #aacd4e" > Categorías</h4>
{% endblock %}

{% block body %}
    {{ parent() }}
{% endblock %}

{% block right_block %}

    <div class="col-lg-9 pt-5">
        <div class="row mb-1">
            <div class="col">
                <a class="btn btn-success" href="{{ path('addCategoria') }}"><span class="fas fa-plus"></span> Adicionar</a>
            </div>
        </div>
            <div class="row">
            <div class="col">
                <div class="table-responsive-sm">
                    <table class="table table-bordered display" id="table">
                        <thead>
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set count = 0 %}
                        {% for c in categorias %}
                            {% set count = count + 1 %}
                            <tr id="{{ "tr"~c.id }}">
                                <th scope="row"> {{ count }}</th>
                                <td>{{ c.nombre }}</td>
                                <td>
                                    <a class="btn btn-primary" href="{{ path('categoria_edit', {'id': c.id }) }}" id="btnEditar"><i class="fas fa-pencil-alt" title="Editar"></i></a>
                                    <button class="btn btn-danger btnDelete" title="Borrar" id="{{ c.id }}" data-routename="categoria_delete"><i class="fas fa-trash-alt"></i></button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    {#    <a href="{{ path('codigo_new') }}">Create new</a>#}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        let delete_message = 'Se <b class="text-danger">eliminarán todas las Sub-Categorías asociadas</b> y a su ves los registros vinculados a estas. ';
    </script>
    {{ encore_entry_script_tags('listados') }}
{% endblock %}