{% extends 'base.html.twig' %}

{% block title %}Notas index{% endblock %}

{% block body %}
    <h1>Notas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Texto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nota in notas %}
            <tr>
                <td>{{ nota.id }}</td>
                <td>{{ nota.titulo }}</td>
                <td>{{ nota.texto }}</td>
                <td>
                    <a href="{{ path('notas_show', {'id': nota.id}) }}">show</a>
                    <a href="{{ path('notas_edit', {'id': nota.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('notas_new') }}">Create new</a>
{% endblock %}
